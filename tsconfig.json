{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "es6"
      ],
      "allowJs": true,
      "strict": false,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "typeRoots": [
         "./src/@types",
         "./custom_typings",
         "./node_modules/@types"
       ]
       
   },
   "include": ["src/**/**/*"],
	"exclude": ["node_modules", "build"],
	"ts-node": {
		"files": true
	}
}